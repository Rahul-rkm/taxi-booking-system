<div class="row">
    <div class="col-6">
        <h1>Customer</h1>
    </div>
</div>

<table class="table table-dark mt-1">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Age</th>
            <th scope="col">Phone</th>
            <th scope="col">Email</th>
            <th scope="col">Street</th>
            <th scope="col" class="text-end">Action</th>

        </tr>
    </thead>
    <tbody>
        {{#each rows}}
        <tr>
            <th scope="row">{{this.driver_id}}</th>
            <th scope="row">{{this.f_name}}</th>
            <th scope="row">{{this.l_name}}</th>
            <th scope="row">{{this.age}}</th>
            <th scope="row">{{this.phone}}</th>
            <th scope="row">{{this.email}}</th>
            <th scope="row">{{this.street}}</th>
            <th scope="row" class="text-end">
                <a href="#" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"> View</i></a>
                <a href="#" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"> Edit</i></a>
                <a href="#" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"> Delete</i></a>
            </th>
        </tr>
        {{/each}}
    </tbody>
</table>