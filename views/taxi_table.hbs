<div class="row">
    <div class="col-6"><h1>Driver</h1></div>
    <div class="col-6 d-flex justify-content-end">
        <a href="#">
            <button type="button" class="btn btn-primary"><i class="bi bi-person-plus-fill"></i> Add User</button>
        </a>
        
    </div>
</div>

<table class="table table-dark mt-1">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Registration No.</th>
            <th scope="col">Taxi Model</th>
            <th scope="col">Taxi Year</th>
            <th scope="col">Taxi Type</th>
            <th scope="col">Status</th>
            <th scope="col">Driver Id</th>
            <th scope="col" class="text-end">Action</th>

        </tr>
    </thead>
    <tbody>
        {{#each rows}}
        <tr>
            <th scope="row">{{this.taxi_id}}</th>
            <th scope="row">{{this.registration_id}}</th>
            <th scope="row">{{this.taxi_model}}</th>
            <th scope="row">{{this.manufacturing_year}}</th>
            <th scope="row">{{this.taxi_type}}</th>
            <th scope="row">{{this.taxi_status}}</th>
            <th scope="row" class="text-end">
                <a href="#" type="button" class="btn btn-light btn-small" ><i class="bi bi-eye">View</i></a>
                <a href="#" type="button" class="btn btn-light btn-small" ><i class="bi bi-pencil">Edit</i></a>
                <a href="#" type="button" class="btn btn-light btn-small" ><i class="bi bi-person-x">Delete</i></a>
            </th>
        </tr>
        {{/each}}
    </tbody>
</table>